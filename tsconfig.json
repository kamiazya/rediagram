{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "/**/*.test.ts",
    "/**/*.test.tsx",
    "/**/*.spec.ts",
    "/**/*.spec.tsx",
    "/**/*.spec.ts",
    "**/lib/**/*"
  ]
}
