{
    "compilerOptions": {
        "target": "ES5",
        "jsx": "react",
        "strict": true,
        "rootDir": "src",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "allowJs": false,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
